<resources>
    <style name="AdyenCheckout.ACHDirectDebit" />

    <style name="AdyenCheckout.ACHDirectDebit.AchHeaderTextView" parent="AdyenCheckout.TextAppearance">
        <item name="android:text">@string/checkout_ach_bank_account_title</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.5</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
    </style>

    <style name="AdyenCheckout.ACHDirectDebit.AccountHolderNameInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_ach_bank_account_holder_name</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AdyenCheckout.ACHDirectDebit.AccountNumberInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_ach_bank_account_number</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">17</item>
    </style>

    <style name="AdyenCheckout.ACHDirectDebit.AbaRoutingNumberInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_ach_bank_account_location</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">9</item>
    </style>

    <style name="AdyenCheckout.ACHDirectDebit.StorePaymentSwitch" parent="AdyenCheckout.Switch">
        <item name="android:text">@string/checkout_ach_store_payment_method_switch_text</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>

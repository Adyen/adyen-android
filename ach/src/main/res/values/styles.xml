    <style name="AdyenCheckout.Ach.AchHeaderTextView" parent="AdyenCheckout.TextAppearance.Primary">
        <item name="android:text">@string/checkout_ach_bank_account_title</item>
    </style>

    <style name="AdyenCheckout.Ach.AccountHolderNameInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_ach_bank_account_holder_name</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AdyenCheckout.Ach.AccountNumberInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_ach_bank_account_number</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">17</item>
    </style>

    <style name="AdyenCheckout.Ach.AbaRoutingNumberInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_ach_bank_account_location</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">9</item>
    </style>


<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Adyen.BottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/Widget.Adyen.BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.Adyen.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/Widget.Adyen.BottomSheet.ShapeAppearance</item>
    </style>

    <style name="Widget.Adyen.BottomSheet.ShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        style="@style/AdyenCheckout.TextAppearance.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_margin"
        android:text="@string/checkout_blik_helper_text" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_blikCode"
        style="@style/AdyenCheckout.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.adyen.checkout.components.ui.view.AdyenTextInputEditText
            style="@style/AdyenCheckout.Blik.BlikCodeInput"
            tools:ignore="RequiredSize" />
    </com.google.android.material.textfield.TextInputLayout>

</merge>
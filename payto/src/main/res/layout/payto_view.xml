<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/textView_modeSelection"
        style="@style/AdyenCheckout.PayTo.ModeSelectionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton_choice"
        style="@style/AdyenCheckout.PayTo.ButtonToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_payId"
            style="@style/AdyenCheckout.PayTo.PayIdButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_bsb"
            style="@style/AdyenCheckout.PayTo.BSBButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/textView_payId_description"
        style="@style/AdyenCheckout.PayTo.PayIdDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView_bsb_description"
        style="@style/AdyenCheckout.PayTo.BSBDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:visibility="gone"
        tools:visibility="visible" />

</merge>

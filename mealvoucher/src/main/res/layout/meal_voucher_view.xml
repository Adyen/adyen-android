<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_mealVoucherCardNumber"
        style="@style/AdyenCheckout.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.adyen.checkout.giftcard.internal.ui.view.GiftCardNumberInput
            android:id="@+id/editText_mealVoucherCardNumber"
            style="@style/AdyenCheckout.MealVoucher.CardNumberInput"
            android:nextFocusDown="@id/editText_mealVoucherExpiryDate"
            android:nextFocusForward="@id/editText_mealVoucherExpiryDate" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_mealVoucherExpiryDate"
            style="@style/AdyenCheckout.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/standard_half_margin"
            android:layout_weight="1">

            <com.adyen.checkout.ui.core.internal.ui.view.ExpiryDateInput
                android:id="@+id/editText_mealVoucherExpiryDate"
                style="@style/AdyenCheckout.MealVoucher.ExpiryDateInput"
                android:nextFocusDown="@id/editText_mealVoucherSecurityCode"
                android:nextFocusForward="@id/editText_mealVoucherSecurityCode" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_mealVoucherSecurityCode"
            style="@style/AdyenCheckout.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_half_margin"
            android:layout_weight="1">

            <com.adyen.checkout.ui.core.internal.ui.view.SecurityCodeInput
                android:id="@+id/editText_mealVoucherSecurityCode"
                style="@style/AdyenCheckout.MealVoucher.SecurityCodeInput" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</merge>

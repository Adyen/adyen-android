<resources>

    <style name="AdyenCheckout.QrCode" />

    <style name="AdyenCheckout.QrCode.CopyButton" parent="AdyenCheckout.Button.Colored">
        <item name="android:layout_height">@dimen/copy_button_height</item>
        <item name="android:text">@string/checkout_qr_code_copy_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AdyenCheckout.QrCode.ProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:layout_width">@dimen/progress_track_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="indicatorColor">@color/progressIndicatorColor</item>
        <item name="trackColor">@color/progressTrackColor</item>
        <item name="trackThickness">@dimen/progress_track_height</item>
        <item name="trackCornerRadius">@dimen/progress_track_radius</item>
    </style>

    <style name="AdyenCheckout.QrCode.TimerTextAppearance" parent="AdyenCheckout.TextAppearance">
        <item name="android:textSize">@dimen/qr_code_timer_text_size</item>
        <item name="android:textColor">@color/qrCodeTimerTextColor</item>
    </style>

    <style name="AdyenCheckout.QrCode.SaveButton" parent="AdyenCheckout.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/copy_button_height</item>
        <item name="android:text">@string/checkout_qr_code_save_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AdyenCheckout.QrCode.Image">
        <item name="android:layout_width">@dimen/qr_image_height</item>
        <item name="android:layout_height">@dimen/qr_image_height</item>
        <item name="android:src">@drawable/ic_placeholder_image</item>
    </style>

    <style name="AdyenCheckout.QrCode.Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:src">@drawable/ic_placeholder_image</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="AdyenCheckout.QrCode.CodeTextAppearance" parent="AdyenCheckout.TextAppearance">
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:textSize">@dimen/checkout_code_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">true</item>
    </style>
</resources>

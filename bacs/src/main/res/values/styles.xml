<resources>
    <style name="Adyen.Checkout.Bacs"/>

    <style name="Adyen.Checkout.Bacs.HolderNameInput" parent="Adyen.Checkout.TextInputEditText">
        <item name="android:hint">@string/bacs_holder_name_hint</item>
        <item name="android:inputType">text|textPersonName|textCapWords</item>
    </style>

    <style name="Adyen.Checkout.Bacs.AccountNumberInput" parent="Adyen.Checkout.TextInputEditText">
        <item name="android:hint">@string/bacs_account_number_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">8</item>
    </style>

    <style name="Adyen.Checkout.Bacs.SortCodeInput" parent="Adyen.Checkout.TextInputEditText">
        <item name="android:hint">@string/bacs_sort_code_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="Adyen.Checkout.Bacs.ShopperEmailInput" parent="Adyen.Checkout.TextInputEditText">
        <item name="android:hint">@string/bacs_shopper_email_hint</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Adyen.Checkout.Bacs.Switch.Amount" parent="Adyen.Checkout.Switch">
        <item name="android:text">@string/bacs_consent_amount</item>
    </style>

    <style name="Adyen.Checkout.Bacs.Switch.Account" parent="Adyen.Checkout.Switch">
        <item name="android:text">@string/bacs_consent_account</item>
    </style>
</resources>

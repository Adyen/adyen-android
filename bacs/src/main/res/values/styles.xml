<resources>
    <style name="AdyenCheckout.Bacs" />

    <style name="AdyenCheckout.Bacs.HolderNameInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/bacs_holder_name_hint</item>
        <item name="android:inputType">text|textPersonName|textCapWords</item>
    </style>

    <style name="AdyenCheckout.Bacs.AccountNumberInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/bacs_account_number_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">8</item>
    </style>

    <style name="AdyenCheckout.Bacs.SortCodeInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/bacs_sort_code_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="AdyenCheckout.Bacs.ShopperEmailInput" parent="AdyenCheckout.TextInputEditText">
        <item name="android:hint">@string/bacs_shopper_email_hint</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="AdyenCheckout.Bacs.Switch.Amount" parent="AdyenCheckout.Switch">
        <item name="android:text">@string/bacs_consent_amount</item>
        <item name="android:layout_marginBottom">@dimen/standard_quarter_margin</item>
    </style>

    <style name="AdyenCheckout.Bacs.Switch.Account" parent="AdyenCheckout.Switch">
        <item name="android:text">@string/bacs_consent_account</item>
        <item name="android:layout_marginBottom">@dimen/standard_quarter_margin</item>
    </style>

    <style name="AdyenCheckout.Bacs.InvalidSwitchTextAppearance" parent="AdyenCheckout.TextAppearance">
        <item name="android:text">@string/bacs_consent_invalid</item>
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
    </style>
</resources>

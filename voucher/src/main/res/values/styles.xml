<resources>

    <style name="AdyenCheckout.Voucher" />

    <style name="AdyenCheckout.Voucher.Amount" parent="AdyenCheckout.TextAppearance.Primary">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdyenCheckout.Voucher.PaymentReference" parent="AdyenCheckout.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/checkout_voucher_payment_reference</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:baselineAlignBottom">false</item>
    </style>

    <style name="AdyenCheckout.Voucher.CodeReference" parent="AdyenCheckout.TextAppearance.Primary">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/standard_one_half_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdyenCheckout.Voucher.DownloadTextAppearance" parent="AdyenCheckout.TextAppearance.Primary">
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/standard_half_margin</item>
        <item name="android:text">@string/checkout_voucher_download_pdf</item>
    </style>

    <style name="AdyenCheckout.Voucher.InformationFieldLabel" parent="AdyenCheckout.TextAppearance.Secondary">
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <style name="AdyenCheckout.Voucher.InformationFieldValue" parent="AdyenCheckout.TextAppearance.Secondary">
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdyenCheckout.Voucher.Simple" />

    <style name="AdyenCheckout.Voucher.Simple.Description" parent="AdyenCheckout.TextAppearance.Primary">
        <item name="android:layout_marginStart">@dimen/standard_double_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_double_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AdyenCheckout.Voucher.Full" />

    <style name="AdyenCheckout.Voucher.Full.Description" parent="AdyenCheckout.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">@dimen/standard_double_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_double_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_one_half_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AdyenCheckout.Voucher.Full.ReadInstructions" parent="AdyenCheckout.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">@dimen/standard_double_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_double_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/checkout_voucher_read_instructions</item>
    </style>

    <style name="AdyenCheckout.Voucher.Button" parent="AdyenCheckout.Button.Secondary">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AdyenCheckout.Voucher.Button.CopyCode" parent="AdyenCheckout.Voucher.Button">
        <item name="android:text">@string/checkout_voucher_copy_code</item>
    </style>

    <style name="AdyenCheckout.Voucher.Button.DownloadPdf" parent="AdyenCheckout.Voucher.Button">
        <item name="android:text">@string/checkout_voucher_download_pdf</item>
    </style>

    <style name="AdyenCheckout.Voucher.Button.SaveImage" parent="AdyenCheckout.Voucher.Button">
        <item name="android:text">@string/checkout_voucher_save_image</item>
    </style>

    <!-- TODO: Remove this style in the next major release -->
    <!-- This style is not being used and will be removed in future releases.
         Override AdyenCheckout.Voucher.InformationFieldLabel instead. -->
    <style name="AdyenCheckout.Voucher.ExpirationDateLabel" />

    <!-- TODO: Remove this style in the next major release -->
    <!-- This style is not being used and will be removed in future releases.
         Override AdyenCheckout.Voucher.InformationFieldValue instead. -->
    <style name="AdyenCheckout.Voucher.ExpirationDate" />

    <!-- TODO: Remove this style in the next major release -->
    <style name="AdyenCheckout.Voucher.Description" />

    <!-- TODO: Remove this style in the next major release -->
    <!-- This style is not being used and will be removed in future releases.
         Override AdyenCheckout.Voucher.Simple.Description instead. -->
    <style name="AdyenCheckout.Voucher.Description.Bacs" />

    <!-- TODO: Remove this style in the next major release -->
    <!-- This style is not being used and will be removed in future releases.
         Override AdyenCheckout.Voucher.Full.Description instead. -->
    <style name="AdyenCheckout.Voucher.Description.Boleto" />
</resources>

<resources>

    <style name="AdyenCheckout.Voucher" />

    <!-- Will be removed with BacsVoucherView in future releases. -->
    <style name="AdyenCheckout.Voucher.Description.Bacs" parent="AdyenCheckout.SimpleVoucher.Description">
        <item name="android:text">@string/checkout_voucher_introduction_bacs</item>
    </style>

    <style name="AdyenCheckout.SimpleVoucher.Description" parent="AdyenCheckout.TextAppearance.Primary">
        <item name="android:layout_marginStart">@dimen/standard_double_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_double_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Will be removed with BoletoVoucherView in future releases. -->
    <style name="AdyenCheckout.Voucher.Description.Boleto" parent="AdyenCheckout.FullVoucher.Description">
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/checkout_voucher_introduction</item>
    </style>

    <style name="AdyenCheckout.FullVoucher.Description" parent="AdyenCheckout.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">@dimen/standard_double_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_double_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_one_half_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AdyenCheckout.Voucher.Amount" parent="AdyenCheckout.TextAppearance.Primary">
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
    </style>

    <style name="AdyenCheckout.Voucher.PaymentReference" parent="AdyenCheckout.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/checkout_voucher_payment_reference</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:baselineAlignBottom">false</item>
    </style>

    <style name="AdyenCheckout.Voucher.CodeReference" parent="AdyenCheckout.TextAppearance.Primary">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/standard_one_half_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdyenCheckout.Voucher.DownloadTextAppearance" parent="AdyenCheckout.TextAppearance.Primary">
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/standard_half_margin</item>
        <item name="android:text">@string/checkout_voucher_download_pdf</item>
    </style>

    <!-- Will be removed with BoletoVoucherView in future releases. -->
    <style name="AdyenCheckout.Voucher.ButtonCopyCode" parent="AdyenCheckout.Button.Secondary">
        <item name="android:text">@string/checkout_voucher_copy_code</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
    </style>

    <!-- Will be removed with BoletoVoucherView in future releases. -->
    <style name="AdyenCheckout.Voucher.ButtonDownloadPdf" parent="AdyenCheckout.Button.Secondary">
        <item name="android:text">@string/checkout_voucher_download_pdf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AdyenCheckout.Voucher.ActionButton" parent="AdyenCheckout.Button.Secondary">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Will be removed with BoletoVoucherView in future releases. -->
    <style name="AdyenCheckout.Voucher.ExpirationDateLabel" parent="AdyenCheckout.TextAppearance.Secondary">
        <item name="android:text">@string/checkout_voucher_expiration_date</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <style name="AdyenCheckout.Voucher.InformationFieldLabel" parent="AdyenCheckout.TextAppearance.Secondary">
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <!-- Will be removed with BoletoVoucherView in future releases. -->
    <style name="AdyenCheckout.Voucher.ExpirationDate" parent="AdyenCheckout.TextAppearance.Secondary">
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdyenCheckout.Voucher.InformationFieldValue" parent="AdyenCheckout.TextAppearance.Secondary">
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>

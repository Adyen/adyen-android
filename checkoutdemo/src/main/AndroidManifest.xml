<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.adyen.checkoutdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:theme="@style/AppTheme.ActionBar.Transparent"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="app" android:host="checkout" />
            </intent-filter>
        </activity>

        <activity android:name=".SuccessActivity" android:theme="@style/AppTheme.ActionBar.Transparent"/>
        <activity android:name=".FailureActivity" android:theme="@style/AppTheme.ActionBar.Transparent"/>
    </application>

</manifest>

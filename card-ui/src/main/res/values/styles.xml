<resources>
    <style name="AdyenCheckout.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="hintTextAppearance">@style/TextStyle</item>
        <item name="android:minHeight">90dp</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="StorePaymentSwitch" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">@dimen/standard_quarter_margin</item>
        <item name="android:paddingBottom">@dimen/standard_three_quarters_margin</item>
        <item name="android:paddingRight">@dimen/standard_quarter_margin</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>
</resources>
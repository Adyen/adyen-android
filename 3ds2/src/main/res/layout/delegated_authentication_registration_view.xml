<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/imageView_logo"
        style="@style/AdyenCheckout.Image.Logo.Medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_adyen_fingerprint"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView_title"
        style="@style/AdyenCheckout.TextAppearance.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        tools:text="@string/checkout_3ds2_delegated_authentication_registration_title" />

    <TextView
        android:id="@+id/textView_description"
        style="@style/AdyenCheckout.TextAppearance.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="@dimen/standard_half_margin"
        android:gravity="center_horizontal"
        tools:text="@string/checkout_3ds2_delegated_authentication_registration_description" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        style="@style/AdyenCheckout.DelegatedAuthentication.ProgressIndicator"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/textView_timeLeft"
        style="@style/AdyenCheckout.DelegatedAuthentication.TimerTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="@dimen/standard_margin"
        android:gravity="center_horizontal"
        tools:text="@string/checkout_3ds2_time_left_to_enable" />

    <Button
        android:id="@+id/button_enable"
        style="@style/AdyenCheckout.Button.Colored"
        android:layout_marginHorizontal="@dimen/standard_margin"
        android:layout_marginTop="24dp"
        android:textAllCaps="false"
        tools:text="@string/checkout_3ds2_delegated_authentication_registration_positive_button" />

    <Button
        android:id="@+id/button_notNow"
        style="@style/AdyenCheckout.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="24dp"
        android:textAllCaps="false"
        tools:text="@string/checkout_3ds2_delegated_authentication_registration_negative_button" />

</merge>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/textView_waiting_confirmation"
        style="@style/AdyenCheckout.TextAppearance.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_half_margin"
        android:text="Welcome to Address Lookup" />

    <com.adyen.checkout.ui.core.internal.ui.view.AddressFormInput
        android:id="@+id/addressFormInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:focusableInTouchMode="true"
        android:visibility="gone" />
</merge>

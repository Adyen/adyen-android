<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application android:supportsRtl="true">
        <activity
            android:name=".internal.ui.DropInActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/AdyenCheckout.Translucent" />

        <activity
            android:name=".old.internal.ui.DropInActivity"
            android:enableOnBackInvokedCallback="false"
            android:launchMode="singleTask"
            android:theme="@style/AdyenCheckout.Translucent" />

        <activity
            android:name=".old.DropInRedirectHandlingActivity"
            android:exported="true"
            android:theme="@style/AdyenCheckout.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="${applicationId}"
                    android:path=""
                    android:scheme="${checkoutRedirectScheme}"
                    tools:ignore="AppLinkUrlError" />

                <data
                    android:host="${applicationId}"
                    android:path="/"
                    android:scheme="${checkoutRedirectScheme}" />
            </intent-filter>
        </activity>

        <service
            android:name=".old.SessionDropInService"
            android:exported="false" />
    </application>

</manifest>

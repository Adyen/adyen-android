<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdyenCheckout.BottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/AdyenCheckout.BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AdyenCheckout.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/AdyenCheckout.BottomSheet.ShapeAppearance</item>
    </style>

    <style name="AdyenCheckout.BottomSheet.ShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- This is only used in ActionComponentDialogFragment to prevent dialog jumping animation -->
    <style name="AdyenCheckout.BottomSheet.NoWindowEnterDialogAnimation" parent="@style/Animation.MaterialComponents.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@null</item>
    </style>

</resources>
